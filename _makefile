all: test_motor_driver test_encoder pwm test_set_direction test_camera

test_motor_driver: test_motor_driver.cpp motor_driver.hpp pid_controller.hpp encoder.hpp
	g++ -o $@ $< -lwiringPi

test_encoder: test_encoder.cpp encoder.hpp
	g++ -o $@ $< -lwiringPi

pwm: pwm.cpp encoder.hpp
	g++ -o $@ $< -lwiringPi

test_set_direction: test_set_direction.cpp motor_driver.hpp pid_controller.hpp encoder.hpp
	g++ -o $@ $< -lwiringPi

test_camera:
	g++ test_camera.cpp ~/LCCV/src/*.cpp \
	-I/home/raspberry/LCCV/include \
	-I/home/raspberry/LCCV \
	-I/home/raspberry/libcamera/include \
	-I/home/raspberry/libcamera/include/libcamera \
	`pkg-config --cflags --libs opencv4` \
	-L/home/raspberry/LCCV/build \
	-L/home/raspberry/libcamera/build/src/libcamera \
	-llccv -lcamera -o test_camera

